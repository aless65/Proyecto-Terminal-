@model FileClass

@{
    Layout = null;
}


<form asp-controller="Files1" asp-action="Index" enctype="multipart/form-data" method="post">
    <input type="file" name="file" />
    <hr />

    <button type="submit">Upload</button>
</form>

@if (Model != null)
{

    <table class="table table-bordered table-striped" cellpadding="0" cellspacing="0" border="1">
        <thead>
            <tr>
                <th>SL</th>
                <th>pdf Name</th>
                <th>Display Type</th>

            </tr>
        </thead>
        <tbody>
            @foreach (FileClass file in Model.Files)
            {
                <tr>
                    <td>@file.FileId</td>
                    <td>@file.Name</td>
                    <td>
                        <a href="../Files1/Index?Filename=@file.Name" style="margin-right:10px;">Corrucuent</a>
                        <a href="../Files1/PdfViewNewTab?Filename=@file.Name" target="_blank"> Nuevo</a>
                    </td>


                </tr>
            }
        </tbody>
    </table>

}

<br />
<br />

<embed  id="embPdf" src="/files/@Model.Name" style="width:90%; height:1200px;"/>
