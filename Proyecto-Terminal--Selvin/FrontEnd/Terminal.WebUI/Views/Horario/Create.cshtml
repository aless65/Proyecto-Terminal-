@model Terminal.WebUI.Models.HorariosViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="float-e-margins">
                    <form asp-action="Create" id="formCrear">
                        @Html.AntiForgeryToken()

                        <div class="card">
                            <div class="card-header">
                                <div class="row"><h1>Horarios</h1></div>
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="card">
                                    <div class="card-header text-center bg-teal-300"  >
                                        <div class="row">
                                            <div class="col-4">

                                            </div>
                                            <div class="col-4" style="margin-top: 10px"> 
                                                <h1 style="font-family: Cooper; color: azure">Crear Registro</h1>                                                 
                                            </div>
                                            <div class="col-4">
                                                <div class="text-end">
                                                    @*<img src="https://i.gifer.com/3sf.gif" style="border-radius:100px;border:3px solid black; width:50%">*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="hora_FechaSalida" class="control-label text-dark"></label></strong>                                                    
                                                    <input asp-for="hora_FechaSalida" class="form-control" />
                                                    <strong>
                                                        <span asp-validation-for="hora_FechaSalida" class="text-danger"></span>
                                                    </strong>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="hora_FechaLlegada" class="control-label text-dark"></label></strong>                      
                                                    <input asp-for="hora_FechaLlegada" class="form-control" />
                                                    <strong><span asp-validation-for="hora_FechaLlegada" class="text-danger"></span></strong>                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="hora_Origen" class="control-label text-dark"></label></strong>                                                    
                                                    <input asp-for="hora_Origen" class="form-control" />
                                                    <strong><span asp-validation-for="hora_Origen" class="text-danger"></span></strong>                                                    
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="hora_Destino" class="control-label text-dark"></label></strong>                                                    
                                                    <input asp-for="hora_Destino" class="form-control" />
                                                    <strong><span asp-validation-for="hora_Destino" class="text-danger"></span></strong>                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="hora_CantidadPasajeros" class="control-label text-dark"></label></strong>
                                                    <input asp-for="hora_CantidadPasajeros" class="form-control" />
                                                    <strong><span asp-validation-for="hora_CantidadPasajeros" class="text-danger"></span></strong>                                                    
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="hora_Precio" class="control-label text-dark"></label></strong>                                                    
                                                    <input asp-for="hora_Precio" class="form-control" />
                                                    <strong><span asp-validation-for="hora_Precio" class="text-danger"></span></strong>                                                    
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-8"></div>
                                            <div class="col-2">
                                                <input type="submit" value="Confirmar Envio" class="btn btn-outline-success" />
                                            </div>
                                            <div class="col-2">
                                                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>